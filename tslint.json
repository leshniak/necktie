
{
  "extends": ["tslint-config-standard"],
  "rules": {
    "space-before-function-paren": false,
    "no-use-before-declare": false,
    "variable-name": false,
    "quotemark": [true, "single", "jsx-double"],
    "ter-indent": false,
    "semicolon": false,
    "forin": true,
    "no-console": true,
    "array-type": [true, "generic"],
    "trailing-comma": false,
    "strict-type-predicates": false
  }
}
